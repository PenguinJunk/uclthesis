@Article{Nabatchi2012,
  author           = {Nabatchi, Tina},
  date             = {2012},
  journaltitle     = {Public Administration Review},
  title            = {Putting the “Public” Back in Public Values Research: Designing Participation to Identify and Respond to Values},
  doi              = {https://doi.org/10.1111/j.1540-6210.2012.02544.x},
  number           = {5},
  pages            = {699-708},
  url              = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1540-6210.2012.02544.x},
  volume           = {72},
  abstract         = {This article seeks to put the “public” back in public values research by theorizing about the potential of direct citizen participation to assist with identifying and understanding public values. Specifically, the article explores eight participatory design elements and offers nine propositions about how those elements are likely to affect the ability of administrators to identify and understand public values with regard to a policy conflict. The article concludes with a brief discussion about potential directions for future research.},
  comment          = {2 aims:  p699
- explain ``why ignoring the public is problematic, especially when it comes to resolving policy confl icts, which almost always are related to public values controversies''
- ``theorize about how various participation design choices may (or may not) maximize the likelihood of administrators eliciting and responding to public values in policy conflicts''

``Moore (1995) asserts that public value creation occurs when managers focus attention on three key questions about purpose: p699
- whether the  purpose is publicly valuable
- whether it will be  politically and legally supported
- whether it is administratively and operationally feasible''

which contrasts with the ``complex, relatively stable emotio-cognitive assessments that guide individual behavior'' p699

in public administration ``nearly all controversies boil down to choices among competing values'' p670

``the question becomes how to design public participation processes to maximize the likelihood of  identifying and understanding public values with regard to a particular policy issue or decision'' p701

8 participatory design elements (for helping public administrators identify and understand public values), each with a proposition: p701
1. level of cooperation -  interests focus on identifying the concerns, needs, and values held by individuals and groups, propositions are set up to support conflicting positions - interests are the reasons underlying a position - people tend to have only one position but many reasons - proposition that interest-based are more than position-based to generate cooperation p701
2. communication mode - public participation processes can employ one-way, two-way, and/or deliberative communication modes - develop along the IAP2 Spectrum (IAP22018) - proposition that deliberative communcation is more likely than two-way to assist value identification, and one-way is least likely p701-2
3. level of shared decision authority - along the IAP2 spectrum - proposition that processes with moderate to high levels of shared  decision authority more likely to identify and understand public values p702-3
4. participatory mechanisms - proposition that small table format with integration processes are better and that professional facilitators are better p703-4
5. informational materials - proposition that providing informational material are better p704
6. participant  selection - proposition that public selection is better than stakeholder selection p704
7. participant recruitment - proposition that recruitment strategies that seek to reduce bias rather than self-selection are better p704-5
8. recurrence and iteration - proposition that multiple participatory events are better when policy issue is complex p705

i.e. participatory processes are more likely to help administrators identify and understand all of the relevant public values and values sets when they are designed to: p705
- Be interest-based
- Use deliberative communication modes
- Have moderate to high levels of shared decision authority
- Use small table formats with trained facilitators
- Provide informational materials
- Select participants from members of the public
- Use recruitment strategies that minimize participation bias
- Have more than one session},
  creationdate     = {2024-03-31T10:49:04},
  keywords         = {participatory, values, policy},
  modificationdate = {2024-03-31T11:48:12},
  owner            = {izzy_olivine},
}

