@Article{LentonXAGLSZEDSS2023,
  author           = {Lenton, Timothy M. and Xu, Chi and Abrams, Jesse F. and Ghadiali, Ashish and Loriani, Sina and Sakschewski, Boris and Zimm, Caroline and Ebi, Kristie L. and Dunn, Robert R. and Svenning, Jens-Christian and Scheffer, Marten},
