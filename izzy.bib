@Article{BoswellS2022,
  author           = {Boswell, John and Smedley, Stuart},
  date             = {2022-10-25},
  journaltitle     = {Journal of Public Administration Research and Theory},
  title            = {The Potential of Meta-ethnography in the Study of Public Administration: A Worked Example on Social Security Encounters in Advanced Liberal Democracies},
  doi              = {10.1093/jopart/muac046},
  eprint           = {https://academic.oup.com/jpart/article-pdf/33/4/593/56797599/muac046.pdf},
